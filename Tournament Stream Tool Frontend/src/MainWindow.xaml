<Window x:Class="TST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TST"
        mc:Ignorable="d"
        Title="Tournament Stream Tool" Height="600" Width="800"
        MinWidth="800" MinHeight="600"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#1c1c1e">
    <Grid Name="MainGrid"
          MouseDown="MainGrid_MouseDown"
          Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Margin="0, 0, 20, 0"
              Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label FontWeight="Bold" FontSize="20"
                   Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Foreground="White"
                   VerticalAlignment="Center" HorizontalAlignment="Center">
                Bracket Information
            </Label>
            <Label Grid.Row="1" Grid.Column="0"
                   Foreground="White"
                   VerticalAlignment="Center" HorizontalAlignment="Right">
                Tournament Name:
            </Label>
            <TextBox Grid.Row="1" Grid.Column="1"
                     BorderBrush="#989899" Background="Transparent" 
                     Foreground="White" CaretBrush="White"
                     Margin="0, 2, 0, 2" Padding="8, 0, 8, 0"
                     Name="TournamentNameTextBox"
                     VerticalContentAlignment="Center" TextChanged="TournamentNameTextBox_TextChanged">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="6" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Label Grid.Row="2" Grid.Column="0"
                   Foreground="White"
                   VerticalAlignment="Center" HorizontalAlignment="Right">
                Event Name:
            </Label>
            <TextBox Grid.Row="2" Grid.Column="1"
                     BorderBrush="#989899" Background="Transparent" 
                     Foreground="White" CaretBrush="White"
                     Margin="0, 2, 0, 2" Padding="8, 0, 8, 0"
                     Name="EventNameTextBox"
                     VerticalContentAlignment="Center" TextChanged="EventNameTextBox_TextChanged">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="6" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </Grid>

        <Grid Margin="20"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition />
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <Label FontWeight="Bold" FontSize="20"
                   Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Foreground="White"
                   VerticalAlignment="Center" HorizontalAlignment="Center">
                Set Information
            </Label>
            <Border BorderBrush="#989899" BorderThickness="2" 
                    CornerRadius="6"
                    Grid.Row="1" Grid.Column="0"
                    Margin="2"
                    Padding="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label FontWeight="Bold" FontSize="18"
                           Grid.Row="0"
                           Foreground="White"
                           VerticalAlignment="Center" HorizontalAlignment="Center">
                        Team 1
                    </Label>
                    <CheckBox VerticalAlignment="Center" HorizontalAlignment="Right"
                              Name="Team1CheckBox" 
                              Checked="Team1CheckBox_Checked" Unchecked="Team1CheckBox_Unchecked">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid>
                                    <Border Width="30" Height="30"
                                            Background="Transparent" BorderBrush="#989899"
                                            BorderThickness="1" CornerRadius="6"
                                            Margin="0, 0, 2.5, 0">

                                        <Grid Name="Team1CheckMark" Visibility="Hidden">
                                            <Line X1="6"  Y1="6"
                                                  X2="22" Y2="22"
                                                  Stroke="#989899" StrokeThickness="2" />
                                            <Line X1="22" Y1="6"
                                                  X2="6"  Y2="22"
                                                  Stroke="#989899" StrokeThickness="2"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Team1CheckMark" Property="Visibility" Value="Visible" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                    <Label FontSize="14"
                           Grid.Row="0"
                           Foreground="White"
                           VerticalAlignment="Center" HorizontalAlignment="Right"
                           Margin="0, 0, 32.5, 0">
                        Losers
                    </Label>
                    <Label Grid.Row="1"
                           Foreground="White">
                        Team Name:
                    </Label>
                    <TextBox Grid.Row="2"
                             BorderBrush="#989899" Background="Transparent" 
                             Foreground="White" CaretBrush="White"
                             Margin="0, 2, 0, 2" Padding="8, 0, 8, 0"
                             Name="Team1NameTextBox"
                             VerticalContentAlignment="Center" TextChanged="Team1NameTextBox_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="6" />
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>
            </Border>
            <Border BorderBrush="#989899" BorderThickness="2"
                    CornerRadius="6"
                    Grid.Row="1" Grid.Column="1"
                    Margin="2"
                    Padding="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="1" Grid.Column="0"
                           Grid.ColumnSpan="2"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="White">
                        Round Name:
                    </Label>
                    <TextBox Grid.Row="2" Grid.Column="0"
                             Grid.ColumnSpan="2"
                             BorderBrush="#989899" Background="Transparent" 
                             Foreground="White" CaretBrush="White"
                             Margin="0, 2, 0, 2" Padding="8, 0, 8, 0"
                             Name="RoundNameTextBox"
                             VerticalContentAlignment="Center" TextChanged="RoundNameTextBox_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="6" />
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Label Grid.Row="3" Grid.Column="0"
                           Grid.ColumnSpan="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="White">
                        Scores:
                    </Label>
                    <TextBox Grid.Row="4" Grid.Column="0"
                             BorderBrush="#989899" Background="Transparent"
                             Foreground="White" CaretBrush="White"
                             Margin="0, 2, 2, 2" Padding="8, 0, 8, 0"
                             Name="Team1ScoreTextBox"
                             VerticalContentAlignment="Center"
                             PreviewTextInput="Score_PreviewTextInput"
                             DataObject.Pasting="Score_Pasting" TextChanged="Team1ScoreTextBox_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="6" />
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBox Grid.Row="4" Grid.Column="1"
                             BorderBrush="#989899" Background="Transparent"
                             Foreground="White" CaretBrush="White"
                             Margin="2, 2, 0, 2" Padding="8, 0, 8, 0"
                             Name="Team2ScoreTextBox"
                             VerticalContentAlignment="Center"
                             PreviewTextInput="Score_PreviewTextInput"
                             DataObject.Pasting="Score_Pasting" TextChanged="Team2ScoreTextBox_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="6" />
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>
            </Border>
            <Border BorderBrush="#989899" BorderThickness="2"
                    CornerRadius="6"
                    Grid.Row="1" Grid.Column="2"
                    Margin="2"
                    Padding="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label FontWeight="Bold" FontSize="18"
                           Grid.Row="0"
                           Foreground="White"
                           VerticalAlignment="Center" HorizontalAlignment="Center">
                        Team 2
                    </Label>
                    <CheckBox VerticalAlignment="Center" HorizontalAlignment="Left"
                              Name="Team2CheckBox" 
                              Checked="Team2CheckBox_Checked" Unchecked="Team2CheckBox_Unchecked">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid>
                                    <Border Width="30" Height="30"
                                            Background="Transparent" BorderBrush="#989899"
                                            BorderThickness="1" CornerRadius="6"
                                            Margin="2.5, 0, 0, 0">

                                        <Grid Name="Team2CheckMark" Visibility="Hidden">
                                            <Line X1="6"  Y1="6"
                                                  X2="22" Y2="22"
                                                  Stroke="#989899" StrokeThickness="2" />
                                            <Line X1="22" Y1="6"
                                                  X2="6"  Y2="22"
                                                  Stroke="#989899" StrokeThickness="2"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Team2CheckMark" Property="Visibility" Value="Visible" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                    <Label FontSize="14"
                           Grid.Row="0"
                           Foreground="White"
                           VerticalAlignment="Center" HorizontalAlignment="Left"
                           Margin="32.5, 0, 0, 0">
                        Losers
                    </Label>
                    <Label Grid.Row="1"
                           Foreground="White">
                        Team Name:
                    </Label>
                    <TextBox Grid.Row="2"
                             BorderBrush="#989899" Background="Transparent" 
                             Foreground="White" CaretBrush="White"
                             Margin="0, 2, 0, 2" Padding="8, 0, 8, 0"
                             Name="Team2NameTextBox"
                             VerticalContentAlignment="Center" TextChanged="Team2NameTextBox_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="6" />
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>
            </Border>
            <Button FontWeight="Bold" FontSize="20"
                    Grid.Row="2" Grid.Column="1"
                    BorderBrush="#989899" BorderThickness="2"
                    Background="#5a5a5e"
                    Foreground="White"
                    Margin="2"
                    Name="UpdateButton" Click="UpdateButton_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="6" />
                    </Style>
                </Button.Resources>
                UPDATE
            </Button>
        </Grid>
    </Grid>
</Window>
